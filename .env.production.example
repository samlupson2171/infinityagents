# Production Environment Configuration for Quote System
# Copy this file to .env.production and update with your production values

# Database Configuration
MONGODB_URI=mongodb://your-mongodb-host:27017/infinityweekends
MONGODB_OPTIONS={"ssl":true,"authSource":"admin"}

# Authentication
NEXTAUTH_URL=https://your-production-domain.com
NEXTAUTH_SECRET=your-super-secure-secret-key-here

# Quote System Email Configuration
QUOTE_EMAIL_FROM=quotes@infinityweekends.com
QUOTE_EMAIL_FROM_NAME=Infinity Weekends Quotes
QUOTE_EMAIL_REPLY_TO=support@infinityweekends.com

# SMTP Configuration for Quote Emails
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password

# Email Template Configuration
COMPANY_LOGO_URL=https://your-domain.com/infinity-weekends-logo.png
COMPANY_WEBSITE_URL=https://infinityweekends.com
BOOKING_CALLBACK_URL=https://your-domain.com/api/booking/interest

# Security Configuration
CORS_ORIGIN=https://your-production-domain.com
API_RATE_LIMIT=100
SESSION_TIMEOUT=3600

# Monitoring and Analytics
ANALYTICS_ENABLED=true
ERROR_REPORTING_ENABLED=true
PERFORMANCE_MONITORING=true

# Email Delivery Configuration
EMAIL_RETRY_ATTEMPTS=3
EMAIL_RETRY_DELAY=5000
EMAIL_BATCH_SIZE=50
EMAIL_RATE_LIMIT=100

# Database Performance
DB_CONNECTION_POOL_SIZE=10
DB_QUERY_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/infinityweekends/app.log

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Feature Flags
QUOTE_SYSTEM_ENABLED=true
EMAIL_TRACKING_ENABLED=true
QUOTE_ANALYTICS_ENABLED=true
QUOTE_VERSIONING_ENABLED=true

# Performance Optimization
CACHE_ENABLED=true
CACHE_TTL=3600
STATIC_ASSET_CDN=https://cdn.your-domain.com

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true

# Admin Configuration
ADMIN_EMAIL=admin@infinityweekends.com
SUPPORT_EMAIL=support@infinityweekends.com
TECHNICAL_CONTACT=tech@infinityweekends.com